<UserControl x:Class="Sea.Controls.ShipControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Canvas>
        <Polygon x:Name="_polygon" Fill="DarkGoldenrod" Points="0, 0, 0, 20, 10, 30, 20, 20, 20, 0"/>
        <Ellipse x:Name="_hero" Width="0.6" Height="0.4" Fill="Maroon">
            <Ellipse.RenderTransform>
                <TranslateTransform x:Name="_heroTranslate" X="10" Y="10"/>
            </Ellipse.RenderTransform>
        </Ellipse>
    </Canvas>
</UserControl>
