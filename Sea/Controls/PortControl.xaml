<UserControl x:Class="Sea.Controls.PortControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="10" Height="10">
    <Ellipse Fill="#80008000" Stroke="Black" StrokeThickness="0.25" ContextMenuOpening="OnContextMenuOpening">
        <Ellipse.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Заказ на доставку">
                    <MenuItem Header="Принять..." x:Name="_miTakeOrder" Click="OnTakeOrderClick"/>
                    <MenuItem Header="Выполнить..." Click="OnCompleteOrderClick"/>
                </MenuItem>
                <MenuItem Header="Купить топливо..." Click="OnBuyFuelClick"/>
            </ContextMenu>
        </Ellipse.ContextMenu>
    </Ellipse>
</UserControl>
