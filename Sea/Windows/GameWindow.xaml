<Window x:Class="Sea.Windows.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Sea.Controls"
        WindowState="Maximized" ShowInTaskbar="False"
        Title="Sea" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <controls:WorldControl x:Name="_world"/>

        <WrapPanel Orientation="Horizontal" Grid.Row="1" Background="#80000000">
            <TextBlock x:Name="_tbMouseWorldPos" Text="(12.3; 45.6)" Foreground="#FFFF80"/>
        </WrapPanel>
    </Grid>
</Window>
